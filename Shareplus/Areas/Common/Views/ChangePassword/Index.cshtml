
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center">
    <div class="col-xl-6 col-lg-6 col-md-6">
        <div class="card shadow-sm my-5" style="margin-top: 8rem !important;">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="login-form">
                            <div class="text-center">
                                <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                            </div>
                            <form id="Submit">

                                <div class="form-group">
                                    <label>User Name <span class="mandatory">*</span></label>
                                    <input type="text" disabled="disabled" class="form-control form-control-sm" id="UserName" placeholder="Enter Current UserName" value="@ViewBag.CurrentUserName" >
                                </div>

                                <div class="form-group">
                                    <label>Current Password <span class="mandatory">*</span></label>
                                    <input type="password" class="form-control form-control-sm" id="Password" placeholder="Enter Current Password" >
                                </div>
                                <div class="form-group">
                                    <label>Password <span class="mandatory">*</span></label>
                                    <input type="password" class="form-control form-control-sm" id="NPassword" placeholder="Enter New Password">
                                </div>
                                <div class="form-group">
                                    <label>Repeat Password <span class="mandatory">*</span></label>
                                    <input type="password" class="form-control form-control-sm" id="ReNPassword" placeholder="Repeat Password" >
                                </div>
                                <div class="form-group row justify-content-center">
                                   
                                        <div class="col-6 ">
                                            <button type="submit" class="btn btn-primary btn-block" >Change Password</button>
                                        </div>
                                    </div>

                            </form>

                            <div class="text-center">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer{
    <script src="~/scripts/Common/ChangePassword.js"></script>
}


