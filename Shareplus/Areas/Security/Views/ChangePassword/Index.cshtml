
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}


<div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card shadow-sm my-5">
        <div class="card-body p-0">
            <div class="row">
                <div class="col-lg-12">
                    <div class="login-form">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                        </div>
                        <form>

                            <div class="form-group">
                                <label>Current Password <span class="mandatory">*</span></label>
                                <input type="password" class="form-control form-control-sm" id="exampleInputEmail" placeholder="Current Password" data-bind="value: Password, valueUpdate: 'input'">
                            </div>
                            <div class="form-group">
                                <label>Password <span class="mandatory">*</span></label>
                                <input type="password" class="form-control form-control-sm" id="exampleInputPassword" placeholder="Password" data-bind="value: ConfirmPassword, valueUpdate: 'input'">
                            </div>
                            <div class="form-group">
                                <label>Repeat Password <span class="mandatory">*</span></label>
                                <input type="password" class="form-control form-control-sm" id="exampleInputPasswordRepeat" placeholder="Repeat Password" data-bind="value: ReConfirmPassword, valueUpdate: 'input'">
                            </div>
                            <div class="form-group row">
                                <div class="col-4 ">
                                </div>
                                <div class="col-xl-4 col-md-8 col-sm-10">
                                    <button type="button" class="btn btn-primary btn-block" data-bind="click: Save">Change Password</button>
                                </div>
                            </div>

                        </form>

                        <div class="text-center">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Footer{
    <script src="~/scripts/Security/ChangePassword.js"></script>
}

