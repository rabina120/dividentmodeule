@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "OwnerCategory";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">

            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Owner Category</h6>
                </div>

                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                        </div>
                        <form>
                            <div class="col-12 p-2">
                                <div class="pd-20 card-box mb-30">

                                    <div class="row">
                                       <div class="row col-12 " style="align-content:flex-end">
                                            <div  class="form-group col-xl-12 col-md-12 col-sm-12 col-12 text-right">
                                            <button  class="btn btn-sm btn-primary" data-bind="click:GetShownerCategory">View</button>
                                    </div>

                                       </div>
                                      
                                       
                                       
                                       
                                       

                                        <div class="form-group col-xl-12 col-md-12 col-sm-12 col-12">

                                        <table class="table table-bordered">
                                            <thead>
                                                <tr>
                                                    
                                                    <th>ShownerType</th>
                                                    <th>ShownerSubType</th>
                                                   
                                                    
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <tr>
                                                  
                                                    <td><div class="col-sm-12 col-md-10">
                                        <select class="form-control form-control-sm" id="shOwnerType"
                                                data-bind='options:ShOwnerTypes, optionsText:"ShOwnerTypeAndName",
                                                optionsValue: "ShOwnerType", value: SelectedShOwnerType,
                                                optionsCaption:"---Owner Type---"'>
                                        </select>
                                    </div></td>
                                                    <td><input style="width: auto" class="form-control form-control-sm" type="text" data-bind="value: ShownerSubType"/></td>
                                                    
                                                   
                                                    <td>
                                                        <button class="btn btn-sm btn-primary" data-bind="click: AddShownerType"><i class="fa fa-plus"></i></button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot data-bind="foreach: OwnerList">
                                                <tr>
                                               
                                                    <th  data-bind="text: ShownerType"></th>
                                                    <th data-bind="text:  ShownerSubType"></th>
                                                 
                                                    <td style= "display: flex;">
                                                        <button  type="button" class="btn btn-sm btn-primary" data-bind="click:$root.EditedPR"><i class="fa fa-pen"></i></button>
                                                        <button type="button" class="btn btn-sm btn-danger ml-2" data-bind="click:$root.DeletePR"><i class="fa fa-trash"></i></button>
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                        </div>
                                        
                                    </div>
                                    
                                    <div class="form-group col-xl-12 col-md-12 col-sm-12 col-12 text-right">
                                            <button class="btn btn-sm btn-primary" data-bind="click: Save">Submit</button>
                                    </div>
                               </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer{
    <script src="~/scripts/ParameterSetup/OwnerCategorySetup.js" asp-append-version="true"></script>
    <script src="~/vendor/sweetalert/sweet-alert.js" asp-append-version="true"></script>
}
