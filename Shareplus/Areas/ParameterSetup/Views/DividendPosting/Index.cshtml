
@{
    ViewData["Title"] = "Dividednd Setup Posting";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}



@section Header{
    <style>
        th {
            width: none !important;
        }
       
    </style>
}



<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Dividend Management</li>
                                <li class="breadcrumb-item active" aria-current="page">Dividend Set-Up Posting</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Dividend Set-Up Posting</h6>
                </div>

                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                            @*<div class="pull-left">
                                    <h4 class="text-blue h4">Create User</h4>
                                </div>*@

                        </div>
                        <form>
                            <div class="row">
                            <div class="form-group row col-xl-4 col-md-5 col-sm-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Company <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select>
                                </div>
                            </div>
                        </div>
                            <div class="col-12 p-3" >
                                <table id="DT_DividendParameter" class="table  table-bordered" style="width:98%; ">
                                    <thead>
                                        <tr>
                                            <th class="no-sort"></th>
                                            <th>Dividend Code</th>
                                            <th style="display:none">Description</th>
                                            <th>AGM NO</th>
                                            <th>Fiscal Year </th>
                                            <th>Dividend%</th>
                                            <th>Tax%</th>
                                            <th>Entry By</th>
                                            <th>Entry Date</th>
                                            <th style="display:none">DivType</th>
                                            <th style="display:none">Table Name1< /th>
                                            <th style="display:none">Table Name2</th>
                                        </tr>
                                    </thead>
                                </table>
                            </div>

                        </form>

                        <hr class="my-4 ">
                        <div class="row col-12 ">

                            <div class="col-xl-4  col-md-4 col-sm-4 col-6 ">
                                <input type="date" class="form-control form-control-sm mr-2 mt-1 " data-bind="value:PostingDate" />
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-success  col-12" data-bind="click:PostDividendSetUp.bind($data,'A')" value="Authorization">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-danger  col-12" data-bind="click:PostDividendSetUp.bind($data,'R')" value="Rejection">
                            </div>
                        </div>


                    </div>


                </div>
            </div>
        </div>
    </div>
</div>

@section Footer{

    <script src="~/scripts/ParameterSetup/DividendParameterPosting.js?v=0.1"></script>
}