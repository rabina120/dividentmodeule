
@{
    ViewData["Title"] = "Certificate Handling - Print";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">
                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Certificate</li>
                                <li class="breadcrumb-item active" aria-current="page">Certificate Adding Coordinates</li>
                            </ol>
                        </nav>
                    </div>
                </div>
                <div class="card mb-4">

                    <div class="card mb-4">
                        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                            <h6 class="m-0 font-weight-bold text-primary">Certificate Print Adding Coordinates</h6>
                        </div>
                        <hr class="my-1">
                        <div class="card-body">
                            <div class="pd-20 card-box mb-30">
                                <div class="clearfix">
                                </div>
                                <div class="row">
                                    <div class="form-group row col-xl-5 col-md-5 col-sm-12">
                                        <label class="col-sm-12 col-md-11 col-form-label">Company <span class="mandatory"> *</span></label>
                                        <div class="col-sm-12 col-md-11">
                                            <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---", event:{change: CompantChange}'>
                                            </select>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-md-12">
                                        <table class="table table-responsive">
                                            <thead>
                                                <tr>
                                                    <th>S.N</th>
                                                    <th>Name</th>
                                                    <th>X-Coordinate</th>
                                                    <th>Y-Coordinate</th>
                                                    <th>Side</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody data-bind="foreach: SelectedFieldList">
                                                <tr>
                                                    <td data-bind="text: ($index() + 1)"></td>
                                                    <td data-bind="text: ColumnName"></td>
                                                    <td data-bind="text: XCoordinate"></td>
                                                    <td data-bind="text: YCoordinate"></td>
                                                    <td data-bind="text: Side"></td>
                                                    <td>
                                                        <button class="btn btn-primary" data-bind="click: $root.EditFieldCoordinate">Edit</button>
                                                        <button class="btn btn-primary" data-bind="click: $root.RemoveFieldCoordinate, visible: ColumnName != 'Page'">Remove</button>
                                                    </td>
                                                </tr>
                                            </tbody>
                                            <tfoot>
                                                <tr>
                                                    <td></td>
                                                    <td>
                                                        <select class="form-control form-control-sm"
                                                                data-bind="
                                                                options: FieldList,
                                                                optionsText: 'Item1',
                                                                optionsValue: 'Item2',
                                                                value: SelectedColumnName,
                                                                 optionsCaption:'Select a field!!'
                                                                ">
                                                            <option value=""></option>
                                                        </select>
                                                    </td>
                                                    <td><input type="number" class="form-control form-control-sm" data-bind="value: XCoordinate" /></td>
                                                    <td><input type="number" class="form-control form-control-sm" data-bind="value: YCoordinate" /></td>
                                                    <td>
                                                        <fieldset class="form-group " style="display:flex">
                                    
                                    <div class="row col-12 " >


                                        <div class="custom-control custom-radio">
                                            <input type="radio" id="customRadio1" value="L" name="radioSearch" data-bind="checked: Side" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadio1">Left</label>
                                        </div>
                                        <div class="custom-control custom-radio">

                                            <input type="radio" id="customRadio2" value="R" name="radioSearch" data-bind="checked: Side" class="custom-control-input">
                                            <label class="custom-control-label" for="customRadio2">Right</label>
                                        </div>

                                    </div>
                                </fieldset>
                                                    </td>
                                                    <td>
                                                        <input type="button" class="btn btn-primary" data-bind="click: AddFieldCoordinate, value: Action()=='A'?'Add' : 'Update'" />
                                                        @*<button></button>*@
                                                    </td>
                                                </tr>
                                            </tfoot>
                                        </table>
                                    </div>
                                    <div class="col-md-12 text-right">
                                        <button class="btn btn-primary" data-bind="click: SubmitCoordinates">Save Coordinates</button>
                                    </div>
                                </div>
                                
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Footer{
    <script src="~/vendor/sweetalert/sweet-alert.js"></script>
    <script src="~/scripts/Parametersetup/PrintSetup.js"></script>
}