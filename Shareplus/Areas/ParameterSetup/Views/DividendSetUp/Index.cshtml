
@{
    ViewData["Title"] = "Dividend Setup";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}
@section Header{
    <link href="~/vendor/sweetalert/sweet-alert.css" rel="stylesheet" />
    <style>
        th {
            width: none !important;
        }
    </style>
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Dividend Management</li>
                                <li class="breadcrumb-item active" aria-current="page">Dividend Set-Up</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Dividend Set-Up</h6>
                </div>
                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                            @*<div class="pull-left">
                                    <h4 class="text-blue h4">Create User</h4>
                                </div>*@
                        </div>
                        <div class="row">
                            <div class="form-group row col-xl-4 col-md-5 col-sm-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Company <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="DivCode">Dividend Code: <span class="mandatory">*</span></label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" maxlength="3" type="text" placeholder="Enter Dividend Code" id="DivCode" data-bind="value: Divcode,valueUpdate: 'input',executeOnEnter:GetDividivendDetails, event:{blur:GetDividivendDetails}" maxlength="3" />
                                </div>
                            </div>
                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Agm">
                                    Agm Number <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" type="text" maxlength="3" placeholder="Enter Agm Number" id="Agm" data-bind="value: AgmNo" maxlength="10" />
                                </div>
                            </div>

                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="FiscalYear">
                                    Fiscal Year <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Fiscal Year" maxlength="5" id="FiscalYear" data-bind="value: FiscalYr" maxlength="5" />
                                </div>
                            </div>


                        </div>
                        <div class="row">
                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="DivPer">Dividend % <span class="mandatory">*</span></label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" onkeypress="return isNumberKey(event)"  placeholder="Enter Dividend Percent"  id="DivPer" data-bind="value: BonusShPer"  />

                                </div>
                            </div>
                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Tax">Tax % <span class="mandatory">*</span></label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" step="any" type="number" placeholder="Enter Tax Percent" id="Tax" data-bind="value: taxper" />
                                </div>
                            </div>
                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Date">
                                    Declare Date <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" type="Date" placeholder="Enter Declare Date" id="Date" data-bind="value:DDeclareDt"  />
                                </div>
                            </div>


                        </div>
                        <div class="row">

                            <div class="form-group row ml-2">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="FIN" name="customRadio" class="custom-control-input" data-bind="checked:DivType,checkedValue:'1'">
                                    <label class="custom-control-label" for="FIN">Final Dividend</label>
                                </div>
                                <div class="custom-control custom-radio ml-4">
                                    <input type="radio" id="BON" name="customRadio" class="custom-control-input" data-bind=" checked:DivType,checkedValue:'2'">
                                    <label class="custom-control-label" for="BON">Bonus Share Dividend</label>
                                </div>
                            </div>

                        </div>
                        <hr class="my-4 ">

                        <div class="row col-12 p-4 justify-content-center ">

                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-primary mr-2 mt-1 col-12 " id="Add" value="Add" data-bind="click:ChooseOption.bind($data, 'A')">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-danger mr-2 mt-1 col-12" id="Delete" value="Delete" data-bind="click:ChooseOption.bind($data, 'D') ">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-success mr-2 mt-1 col-12" id="Save" disabled="disabled" value="Save" data-bind="click:SaveDividendParameter ">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-secondary mr-2 mt-1 col-12" id="Cancel" value="Cancel" data-bind="click: ClearControl">
                            </div>
                        </div>


                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

@section Footer{
    <script src="~/vendor/sweetalert/sweet-alert.js"></script>
    <script src="~/scripts/ParameterSetup/DividendParameterSetup.js"></script>
}

