@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Change Pin";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">

            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Change Pin</h6>
                </div>
                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="row">
                            <div class="form-group col-xl-3 col-md-3 col-sm-12 col-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Current Pin <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-12">
                                    <input type="text" class="form-control form-control-sm" id="OldPin" data-bind="value:OldPin" />
                                    
                                </div>
                            </div>

                            <div class="form-group col-xl-3 col-md-3 col-sm-12 col-12">
                                <label class="col-sm-12 col-md-11 col-form-label">New Pin <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-12">
                                    <input type="text" class="form-control form-control-sm" id="NewPin" data-bind="value:NewPin" />
                              
                                </div>
                            </div>

                            <div class="form-group col-xl-3 col-md-3 col-sm-12 col-12">
                                <label class="col-sm-12 col-md-11 col-form-label">New Confirm Pin </label>
                                <div class="col-sm-12 col-md-12">

                                    <input type="text" class="form-control form-control-sm" id="NewCurrentPin" data-bind="value:NewCurrentPin" />
                                  
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-3 col-sm-12 col-12">
                                <label class="col-sm-12 col-md-11 col-form-label">
                                </label>
                                <div class="col-sm-12 col-md-12">
                                    <button class="btn btn-primary" id="btnSave" data-bind="click:UpdatePin">
                                        Update
                                    </button>
                                </div>
                            </div>
                        </div>
                        <br />

                      
                    </div>
                </div>


            </div>

        </div>
    </div>
</div>

@section Footer {
    <script src="~/vendor/sweetalert/sweet-alert.js"></script>
    <script src="/scripts/FundTransfer/ChangePin.js" asp-append-version="true"></script>
}