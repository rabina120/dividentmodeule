
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">eSewa Transaction</li>
                                <li class="breadcrumb-item active" aria-current="page">Account Validation</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Account Validation</h6>
                </div>
                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">

                        <div class="row">
                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Company <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="CompanyList" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row col-xl-4 col-md-6 col-sm-12 col-12">

                                <label class="col-sm-12 col-md-11 col-form-label">Dividend <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="DividendList" data-bind='options: DividendLists,optionsText: "ShowDividendText",optionsValue:"Divcode",value:SelectedDividend, optionsCaption:"---Dividends---"'>
                                    </select>
                                </div>

                            </div>

                            <div class="form-group row col-xl-4 col-md-5 col-sm-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Batch Request<span class="mandatory">*</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="BatchList" data-bind='options: BatchLists,optionsText: "BatchText",optionsValue:"BatchId",value:SelectedBatchId, optionsCaption:"---Batch Request---"'>
                                    </select>
                                </div>
                            </div>

                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <div class="col-sm-8 col-md-9">
                                    <input type="button" class="btn btn-primary mr-2 mt-4 col-12" value="Load Transactions" data-bind="click: LoadAccountValidationData">
                                </div>
                            </div>
                        </div>

                        <div class="table-responsive">
                            <table id="AccountValidationProcessingTable" class="table table-striped table-bordered" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>FullName</th>
                                        <th>BankCode</th>
                                        <th>BankNo</th>
                                        <th>ContactNo</th>
                                        <th>TaxDamt</th>
                                        <th>Bonustax</th>
                                        <th>Bonusadj</th>
                                        <th>TotalAmt</th>
                                        <th>WarrantAmt</th>
                                        <th>SubToken</th>
                                        <th>ApprovedBy</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                        <hr class="my-4 ">



                        <div class="row ">
                            <div class="form-group row col-12 justify-content-center">
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <div class="col-sm-8 col-md-9">
                                        <input type="button" class="btn btn-primary" id="CheckAccount"
                                               data-toggle="modal" data-target="#loginModal" value="Check Account"/>
                                    </div>
                                </div>
                            </div>
                        </div>


                        <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel"
                             aria-hidden="true">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="m-0 font-weight-bold text-primary">eSewa Credentials</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <form class="col-12">
                                            <div class="card col-12">
                                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                                    <h6 class="m-0 font-weight-bold text-primary">Login</h6>
                                                </div>
                                                <hr class="my-1">
                                                <div class="card-body">

                                                    <div class="form-group row col-12">
                                                        <label class="col-4 col-form-label">Username</label>
                                                        <div class="col-sm-8 col-md-8">
                                                            <input class="form-control form-control-sm" type="text"
                                                                   placeholder="Username" data-bind="value: UserName">
                                                        </div>
                                                    </div>
                                                    <div class="form-group row col-12">
                                                        <label class="col-4 col-form-label">Password</label>
                                                        <div class="col-sm-8 col-md-8">
                                                            <input class="form-control form-control-sm" type="Password"
                                                                   placeholder="Password" data-bind="value: Password">
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-primary"
                                                data-dismiss="modal">
                                            Close
                                        </button>
                                        <button type="button" class="btn btn-primary mr-2 mt-4 col-12"  id="Credential" data-bind="click: ValidateHolderAccount">
                                            Login
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>


@section Footer{
    <script src="~/vendor/sweetalert/sweet-alert.js"></script>
    <script src="~/scripts/ESewaTransaction/AccountValidation.js"></script>
}

