@{
    ViewData["Title"] = "Dakhil Transfer - Share Transfer";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}


@section Header{
<link href="/vendor/sweetalert/sweet-alert.css" rel="stylesheet" />
<style>
    th {
        width: none !important;
    }
</style>
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Share Transfer</h6>
                </div>
                <hr class="my-1" />
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                        </div>

                        <div class="row">
                            <div class="form-group row col-xl-2 col-md-6 col-sm-12">
                                <label class="col-sm-12 col-md-12 col-form-label">Company <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-12">
                                    <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select>
                                </div>
                            </div>

                        </div>
                        <div class="row ">
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label">Reg No From </label>
                                <div class="col-sm-12 col-md-12">
                                    <input class="form-control form-control-sm" data-bind="value:RegNoFrom" id="RegNoFrom" onkeypress="return isNumberKey(event)" type="text" placeholder="Reg No From">
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label">End Row No</label>
                                <div class="col-sm-12 col-md-12">
                                    <input class="form-control form-control-sm" data-bind="value:RegNoTo" id="RegNoTo" onkeypress="return isNumberKey(event)" type="text" placeholder="Reg No To">
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date1">
                                <label class="col-12 col-form-label" for="DakhilDateFrom">Dakhil Date From</label>
                                <div class="input-group date col-sm-12 col-md-12">
                                    <div class="input-group-prepend">
                                    </div>
                                    <input type="text" class="form-control form-control-sm" data-bind="value:DakhilDateFrom , text:DakhilDateFrom" id="DakhilDateFrom">
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date2">
                                <label class="col-12 col-form-label" for="DakhilDateTo">Dakhil Date To</label>
                                <div class="input-group date col-sm-12 col-md-12">
                                    <div class="input-group-prepend">
                                    </div>
                                    <input type="text" class="form-control form-control-sm" data-bind="value: DakhilDateTo , text:DakhilDateTo" id="DakhilDateTo">
                                </div>
                            </div>
                            <div class="col-xl-3 col-md-2 col-sm-4 col-4 ">
                                <label class="col-12 col-form-label"></label>
                                <button type="button" data-bind="click:Search" class="btn btn-info mt-2">
                                    <i class="fas fa-search">Search</i>
                                </button>

                            </div>
                        </div>
                        <hr class="my-1" />
                        <div class="row">
                            <div class="col-12 p-3">
                                <table id="tbl_Share_Transfer" class="table table-bordered ">
                                    <thead>
                                        <tr>
                                            <th> <input type="checkbox" data-bind="checked: SelectAll" id="chk" /></th>
                                            <th>S.N.</th>
                                            @*<th>CertNo</th>
                                                <th>SrNoFrom</th>
                                                <th>SrNoTo</th>*@
                                            <th>ShKitta</th>
                                            @*<th>SellerNo</th>
                                                <th>SellerName</th>*@
                                            <th>BuyerNo</th>
                                            <th>BuyerName</th>
                                            <th>RegNo</th>
                                            <th>TransferredDate</th>
                                            <th>TotalRecords</th>
                                            <th>View</th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach:DakhilTransferList">
                                        <tr>
                                            <td><input type="checkbox" data-bind="checked: Selected" class="case" name="case[]" /></td>
                                            <td><span data-bind="text: ($index() +1)"></span></td>
                                            @*<td data-bind="text: CertNo"></td>
                                                <td data-bind="text: SrNoFrom"></td>
                                                <td data-bind="text: SrNoTo"></td>*@
                                            <td data-bind="text: TranKitta"></td>
                                            @* <td data-bind="text: SHolderNo"></td>
                                                <td data-bind="text: SellerHolderName"></td>*@
                                            <td data-bind="text: BHolderNo"></td>
                                            <td data-bind="text: BuyerHolderName"></td>
                                            <td data-bind="text: RegNo"></td>
                                            <td data-bind="text: TransferDt"></td>
                                            <td data-bind="text: TotalRecords"></td>
                                            <td><input type="button" class="btn btn-info" value="Details" data-bind="click:SearchIndividualData" /></td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <hr class="my-1" />
                        <div class="row ">
                            <div class="form-group row col-xl-2 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label">Folio No </label>
                                <div class="col-sm-12 col-md-12">
                                    <input class="form-control form-control-sm" data-bind="value:FolioNo" id="FolioNo" onkeypress="return isNumberKey(event)" type="text" placeholder="FolioNo">
                                </div>
                            </div>
                            @*<div class="form-group row col-xl-2 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label">Batch No</label>
                                <div class="col-sm-12 col-md-12">
                                    <input class="form-control form-control-sm" data-bind="value:BatchNo" id="BatchNo" onkeypress="return isNumberKey(event)" type="text" placeholder="Batch No">
                                </div>
                            </div>*@
                            <div class="form-group row col-xl-2 col-md-6 col-sm-12 col-12 " id="simple-date2">
                                <label class="col-12 col-form-label" for="TransferDate">Transfer Date</label>
                                <div class="input-group date col-sm-12 col-md-12">
                                    <div class="input-group-prepend">
                                    </div>
                                    <input type="text" class="form-control form-control-sm" disabled="disabled" data-bind="value: TransferDate , text:TransferDate" id="TransferDate">
                                </div>
                            </div>
                        </div>
                        <hr class="my-1" />
                        <div class="row col-12 justify-content-center">
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-success col-12" data-bind="click:Save.bind(this, 'A')" value="Transfer">
                            </div>
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-danger col-12" data-bind="click:Save.bind(this, 'C')" value="Cancel Transfer">
                            </div>
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-info col-12" data-bind="click:Refresh" value="Refresh">
                            </div>
                        </div>

                        <div class="modal fade" id="IndividualShareTransferModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalScrollableTitle" aria-hidden="true">
                            <div class="modal-dialog modal-dialog-scrollable modal-xl" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalScrollableTitle">Dakhil Transfer List</h5>
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                            <span aria-hidden="true">&times;</span>
                                        </button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="col-12">
                                            <div class="card mb-4">
                                                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                                </div>
                                                <div class="col-12 p-3 table-responsive">
                                                    <table id="IndividualDakhilTransferTable" class="table table-hover">
                                                        <thead>
                                                            <tr>
                                                                <th>S.N.</th>
                                                                <th>CertNo</th>
                                                                <th>SrNoFrom</th>
                                                                <th>SrNoTo</th>
                                                                <th>ShKitta</th>
                                                                <th>SellerNo</th>
                                                                <th>SellerName</th>
                                                                <th>BuyerNo</th>
                                                                <th>BuyerName</th>
                                                            </tr>
                                                        </thead>
                                                        <tbody data-bind="foreach:IndividualDakhilTransferList">
                                                            <tr>

                                                                <td><span data-bind="text: ($index() +1)"></span></td>
                                                                <td data-bind="text: CertNo"></td>
                                                                <td data-bind="text: SrNoFrom"></td>
                                                                <td data-bind="text: SrNoTo"></td>
                                                                <td data-bind="text: TranKitta"></td>
                                                                <td data-bind="text: SHolderNo"></td>
                                                                <td data-bind="text: SellerHolderName"></td>
                                                                <td data-bind="text: BHolderNo"></td>
                                                                <td data-bind="text: BuyerHolderName"></td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>

                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>

@section footer{
<script type="text/javascript">
    function toggle(source) {
        checkboxes = document.getElementsByName('case[]');
        for (var i = 0, n = checkboxes.length; i < n; i++) {
            checkboxes[i].checked = source.checked;
        }
    }

</script>
<script src="/vendor/sweetalert/sweet-alert.js"></script>
<script src="/scripts/DakhilTransfer/ShareTransfer.js"></script>
}

