@{
    ViewData["Title"] = "Dakhil Transfer - Many To One Transfer";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

@section Header{
<link href="~/vendor/sweetalert/sweet-alert.css" rel="stylesheet" />
<style>
    th {
        width: none !important;
    }
</style>
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">

            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Many To One Dakhil Transaction</li>
                                <li class="breadcrumb-item active" aria-current="page">Many To One Dakhil Transaction</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Many To One Dakhil Transaction</h6>
                </div>

                <div class="card-body">
                    <div class="pd-20 card-box mb-30">

                        <form>
                            @* <div class="row col-12 p-4 justify-content-center ">
                                <div class="col-xl-3 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-success mr-2 mt-1 col-12 " id="AddButton" value="Add" data-bind="click: chooseOptions.bind($data,'A')">
                                </div>
                                <div class="col-xl-3 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-info mr-2 mt-1 col-12 " id="UpdateButton" value="Edit" data-bind="click: chooseOptions.bind($data,'U')">
                                </div>
                                <div class="col-xl-3 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-danger mr-2 mt-1 col-12 " id="DeleteButton" value="Delete" data-bind="click: chooseOptions.bind($data,'D')">
                                </div>
                                </div>
                            *@

                            <div class="row">
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-sm-12  col-form-label">Company <span class="mandatory"> *</span></label>
                                    <div class="col-sm-12 col-md-12">
                                        <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                        </select>
                                    </div>
                                </div>
                            </div>

                            <div id="BuyerDiv">
                                <hr class="my-4">
                                <div class="row">
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label">Buyer Holder No <span class="mandatory">*</span></label>
                                        <div class="col-sm-12 col-md-12">
                                            <input class="form-control form-control-sm" onkeypress="return isNumberKey(event)" type="text" placeholder="Buyer Holder Number"
                                                   id="BuyerHolderNo" data-bind="value:BuyerHolderNo ,valueUpdate: 'input',executeOnEnter:GetBuyerInformation.bind($data,BuyerHolderNo),
                                            event:{blur:GetBuyerInformation.bind($data,BuyerHolderNo)}" />
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label">Buyer Name </label>
                                        <div class="col-sm-12 col-md-12">
                                            <input class="form-control form-control-sm" disabled="disabled" data-bind="value:BuyerName" type="text" placeholder="BuyerName">
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label">Buyer Address</label>
                                        <div class="col-sm-12 col-md-12">
                                            <input class="form-control form-control-sm" disabled="disabled" data-bind="value:BuyerAddress" type="text" placeholder="Buyer Address">
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label">Buyer Total Kitta</label>
                                        <div class="col-sm-12 col-md-12">
                                            <input class="form-control form-control-sm" disabled="disabled" data-bind="value:BuyerTotalKitta" type="text" placeholder="Buyer Total Kitta">
                                        </div>
                                    </div>
                                </div>
                            </div>
                             <div id="RegistrationDiv">
                                <hr class="my-4">
                                <div class="row">
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label">Letter <span class="mandatory">*</span></label>
                                        <div class="col-sm-12 col-md-12">
                                            <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" id="Letter" data-bind="value:Letter" type="text" placeholder="Letter">
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label" for="Broker">Broker <span class="mandatory">*</span></label>
                                        <div class="col-sm-12 col-md-12">
                                            <select class="form-control form-control-sm" id="BrokerList" disabled="disabled" data-bind='options: BrokerList,optionsText: "BrokerName",optionsValue:"BCode",value:SelectedBroker, optionsCaption:"---Broker---"'>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                        <label class="col-12 col-form-label" for="TradeType">TradeType <span class="mandatory">*</span></label>
                                        <div class="col-sm-12 col-md-12">
                                            <select class="form-control form-control-sm" id="TradeTypeList" disabled="disabled" data-bind='options: TradeTypeList,optionsText: "TradeTypeName",optionsValue:"TradeTypeId",value:SelectedTradeType, optionsCaption:"---TradeType---"'>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date1">
                                        <label class="col-sm-12 col-md-11 col-form-label">Dakhil Date <span class="mandatory">*</span></label>

                                        <div class="input-group date col-sm-12 col-md-12 mt-1">
                                            <div class="input-group-prepend">
                                            </div>
                                            <input type="text" class="form-control form-control-sm" disabled="disabled" data-bind="value: DakhilDate , text:DakhilDate" id="DakhilDate">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <hr class="my-4">
                            <div class="row">
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">Tran No </label>
                                    <div class="col-sm-12 col-md-12">
                                        <input  class="form-control form-control-sm"  data-bind="value:TranNo" type="text" placeholder="Tran No">
                                    </div>
                                </div>
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">Reg No </label>
                                    <div class="col-sm-12 col-md-12">
                                        <input  class="form-control form-control-sm" disabled="disabled" data-bind="value:RegNo" type="text" placeholder="Reg No">
                                    </div>
                                </div>
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">Seller Certificate No <span class="mandatory">*</span></label>
                                    <div class="col-sm-12 col-md-12">
                                        <input class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" type="text" placeholder="Enter Certificate Number"
                                               id="SellerCertificateNo" data-bind="value:SellerCertificateNo,valueUpdate: 'input',executeOnEnter:GetSellerCertificateInformation.bind($data,SellerCertificateNo)" />
                                    </div>
                                </div>
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">Seller Holder No </label>
                                    <div class="col-sm-12 col-md-12">
                                        <input  class="form-control form-control-sm" disabled="disabled" data-bind="value:SellerHolderNo" type="text" placeholder="ShareHolder No">
                                    </div>
                                </div>
                             </div>
                             <div class="row">


                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-122">
                                    <label class="col-12 col-form-label">Seller Holder Name</label>
                                    <div class="col-sm-12 col-md-12">
                                        <input class="form-control form-control-sm" disabled="disabled" data-bind="value:SellerHolderName" type="text" placeholder="Share Holder Name">
                                    </div>
                                </div>
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">Start Serial No </label>
                                    <div class="col-sm-12 col-md-12">
                                        <input class="form-control form-control-sm" disabled="disabled" data-bind="value:SellerStartSrNo" type="text" placeholder="Start Serial No">
                                    </div>
                                </div>
                                <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                    <label class="col-12 col-form-label">End Serial No</label>
                                    <div class="col-sm-12 col-md-12">
                                        <input class="form-control form-control-sm" disabled="disabled" data-bind="value:SellerEndSrNo" type="text" placeholder="End Serial No">
                                    </div>
                                </div>
                               
                            </div>

                              <div class="col-12 p-3 table-responsive">
                                <table id="tbl_Transfer_List" class="table  table-bordered ">
                                    <thead>
                                        <tr>
                                            <th>RegNo</th>
                                            <th>TranNo</th>
                                            <th>CertificateNo</th>
                                            <th>SrNoFrom</th>
                                            <th>SrNoTo</th>
                                            <th>SellerHolderNo</th>
                                            <th>SellerName</th>
                                            <th>SellerKitta</th>
                                            <th>Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody data-bind="foreach:SellerHolderList">
                                        <tr>
                                            <td data-bind="text: RegNo"></td>
                                            <td data-bind="text: TranNo"></td>
                                            <td data-bind="text: CertNo"></td>
                                            <td data-bind="text: SrNoFrom"></td>
                                            <td data-bind="text: SrNoTo"></td>
                                            <td data-bind="text: ShHolderNo"></td>
                                            <td data-bind="text: SHolderName"></td>
                                            <td data-bind="text: ShKitta"></td>
                                            <td><button class="btn btn-danger" data-bind="click: RemoveFromSellerHolderList.bind($data,CertNo)" >Remove</button></td>
                                           
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                           


                            <div class="row col-12 p-4 justify-content-center ">

                                <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                    <input type="button" disabled="disabled" class="btn btn-success mr-2 mt-1 col-12 " id="Save" value="Save" data-bind="click: Save">
                                </div>
                                <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                    <input type="button" class="btn btn-info mr-2 mt-1 col-12" id="Refresh" value="Refresh" data-bind="click: refresh">
                                </div>

                            </div>


                        </form>

                    </div>
                </div>
            </div>

        </div>

    </div>
</div>
@section Footer{
<script src="~/vendor/sweetalert/sweet-alert.js"></script>
<script src="~/scripts/DakhilTransfer/ManyToOneDakhilTransfer.js"></script>

}