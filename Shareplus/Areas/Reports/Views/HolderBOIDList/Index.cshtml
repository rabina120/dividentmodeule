

@{
    ViewData["Title"] = "Holder BOID List";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}

@section Header{
    <link href="~/vendor/sweetalert/sweet-alert.css" rel="stylesheet" />
    <style>
        th {
            width: none !important;
        }
    </style>
}

<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
        <div class="min-height-200px">
            <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Reports</li>
                                <li class="breadcrumb-item active" aria-current="page">Holder Boid List</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
            <!-- Default Basic Forms Start -->
            <div class="card mb-4">
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Holder Boid List</h6>
                </div>
                <hr class="my-1">
                <div class="card-body">
                    <div class="pd-20 card-box mb-30">
                        <div class="clearfix">
                            @*<div class="pull-left">
                                    <h4 class="text-blue h4">Create User</h4>
                                </div>*@
                        </div>
                        <div class="row">
                            <div class="form-group row col-xl-4 col-md-5 col-sm-12">
                                <label class="col-sm-12 col-md-11 col-form-label">Company <span class="mandatory"> *</span></label>
                                <div class="col-sm-12 col-md-11">
                                    <select class="form-control form-control-sm" id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="row col-12 mt-2">

                            <div class="form-group row col-xl-4 col-md-5">

                                <div class="custom-control custom-radio">
                                    <input type="radio" id="Dem" disabled="disabled" name="customRadio1" class="custom-control-input" data-bind=" checked:PDType,checkedValue:'2'">
                                    <label class="custom-control-label" for="Dem">Demate</label>
                                </div>
                                <div class="custom-control custom-radio  ml-4">
                                    <input type="radio" id="Phy" disabled="disabled" name="customRadio1" checked class="custom-control-input" data-bind="checked:PDType,checkedValue:'1'">
                                    <label class="custom-control-label" for="Phy">Physical</label>
                                </div>
                            </div>

                            <div class="form-group row col-xl-4 col-md-5">
                                <div class="custom-control custom-radio">
                                    <input type="radio" id="Bon" disabled="disabled" name="customRadio2" checked class="custom-control-input" data-bind="checked:DivType,checkedValue:'1'">
                                    <label class="custom-control-label" for="Bon">Bonus</label>
                                </div>
                                <div class="custom-control custom-radio ml-4">
                                    <input type="radio" id="Div" disabled="disabled" name="customRadio2" class="custom-control-input" data-bind=" checked:DivType,checkedValue:'2'">
                                    <label class="custom-control-label" for="Div">Dividend</label>
                                </div>
                            </div>

                        </div>
                        <div class="row">

                            <div class="form-group row col-xl-4 col-md-5 col-sm-12">
                                <label class="col-sm-12 col-md-11 col-form-label" for="SHHOLDERNO">ShareHolder No:<span class="mandatory">*</span></label>
                                <div class="col-sm-11 col-md-10">
                                    <input type="text" class="form-control form-control-sm" disabled="disabled" onkeypress="return isNumberKey(event)" placeholder="Enter Holder No" id="ShHolderno" data-bind="value: HolderNo,valueUpdate: 'input',executeOnEnter:GetHolderDetails, event:{blur:GetHolderDetails}" />
                                </div>
                                <div class="col-sm-1 col-md-1">
                                    <button type="button" class="btn btn-primary btn-sm" disabled="disabled" id="SearchButton" data-toggle="modal" data-target="#searchQueryModalTheme">
                                        <i class="fa fa-search"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Name">
                                    Name <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" disabled="disabled" type="text" placeholder="Enter Name " id="Name" data-bind="value: Name" />
                                </div>
                            </div>

                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Kitta">
                                    Present Kitta <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Kitta" id="Kitta" data-bind="value: PKitta" />
                                </div>
                            </div>
                        </div>
                        <div class="row">

                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="FName">
                                    Father Name <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Father Name" id="FName" data-bind="value: FName" />
                                </div>
                            </div>


                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="GFName">
                                    Grand Father Name <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Grand Father Name" id="GFName" data-bind="value: GFName" />
                                </div>
                            </div>

                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="Address">
                                    Address <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Address" id="Address" data-bind="value: Address" />
                                </div>
                            </div>

                        </div>
                        <div class="row">



                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="District">
                                    District <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter District" id="District" data-bind="value: District" />
                                </div>
                            </div>
                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="TelNo">
                                    Telephone No <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Telephone No" id="TelNo" data-bind="value: TelNo" />
                                </div>
                            </div>


                            <div class="form-group row col-xl-4 col-md-4 col-sm-12 col-12">
                                <label class="col-12 col-form-label" for="AccountNo">
                                    Account No <span class="mandatory">*</span>
                                </label>
                                <div class="col-sm-12 col-md-10">
                                    <input class="form-control form-control-sm" type="text" disabled="disabled" placeholder="Enter Account No" id="AccountNo" data-bind="value: AccountNo" />
                                </div>
                            </div>


                        </div>

                        <hr class="my-4 ">

                        <div class="row col-12 p-4 justify-content-center ">

                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-primary mr-2 mt-1 col-12 " id="Add" value="Add" data-bind="click:ChooseOption.bind($data, 'A')">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-danger mr-2 mt-1 col-12" id="Delete" value="Delete" data-bind="click:ChooseOption.bind($data, 'D') ">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-success mr-2 mt-1 col-12" id="Save" disabled="disabled" value="Save" data-bind="click:SaveDividendParameter ">
                            </div>
                            <div class="col-xl-2 col-md-3 col-sm-4 col-6 ">
                                <input type="button" class="btn btn-secondary mr-2 mt-1 col-12" id="Cancel" value="Cancel" data-bind="click: ClearControl">
                            </div>
                        </div>


                    </div>
                </div>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="searchQueryModalTheme" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <form class="col-12">
                                <div class="card col-12">
                                    <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                                        <h6 class="m-0 font-weight-bold text-primary">Search BOID Holder</h6>
                                    </div>
                                    <hr class="my-1">
                                    <div class="card-body">

                                        <div class="form-group row col-12">
                                            <label class="col-5 col-form-label">BOID Name</label>
                                            <div class="col-sm-6 col-md-6">
                                                <input class="form-control form-control-sm" type="text" placeholder="Enter BOID Name" data-bind="value: BOIDName">
                                            </div>
                                        </div>
                                        <div class="form-group row col-12">
                                            <table class="table col-12 w-100">
                                                <thead>
                                                    <tr>
                                                        <th>
                                                            SN
                                                        </th>
                                                        <th>
                                                            BOID
                                                        </th>
                                                        <th>
                                                            Name
                                                        </th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            1
                                                        </td>
                                                        <td>
                                                            1
                                                        </td>
                                                        <td>
                                                            1
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>

                                    </div>
                                </div>
                            </form>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-outline-primary" data-dismiss="modal">Close</button>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Footer{
    <script src="~/vendor/sweetalert/sweet-alert.js"></script>
    <script src="~/scripts/Dividend Management/HolderBOIDList.js"></script>
}
