@{
    ViewData["Title"] = "Holder Management - ShareHolder Information";
    Layout = "~/Areas/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="pd-ltr-20 xs-pd-20-10">
         <div class="page-header">
                <div class="row">
                    <div class="col-md-6 col-sm-12">

                        <nav aria-label="breadcrumb" role="navigation">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item">Holder Management</li>
                                <li class="breadcrumb-item active" aria-current="page">ApplicationForUpdatePosting</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        <!-- Default Basic Forms Start -->
        <div class="card mb-4">
            <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                <h6 class="m-0 font-weight-bold text-primary">Application For Update Entry</h6>
            </div>

            <div class="card-body">
                <div class="pd-20 card-box mb-30">

                    <form>


                        <div class="row">
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <label class="col-sm-12 col-form-label" for="reportSelect2">Company <span class="mandatory">*</span></label>
                                <div class="col-sm-12 col-md-10">
                                        <select class="form-control form-control-sm"  id="Company" data-bind='options: CompanyDetails,optionsText: "CompEnName",optionsValue:"CompCode",value:SelectedCompany, optionsCaption:"---Company---"'>
                                    </select> 
                                </div>
                            </div>
				            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date1">
                                <label class="col-sm-12 col-md-12 col-form-label" for="SplitDateFrom">Date From </label>
                                <div class="input-group date col-sm-12 col-md-10">
                                    <div class="input-group-prepend">
                                    </div>
                                    <input type="text" class="form-control form-control-sm" placeholder="Date From" id="dateFrom" data-bind="value: dateFrom">
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date1">
                                <label class="col-sm-12 col-md-12 col-form-label" for="SplitDateTo">Date To </label>
                                <div class="input-group date col-sm-12 col-md-10">
                                    <div class="input-group-prepend">
                                    </div>
                                    <input type="text" class="form-control form-control-sm" placeholder="Date To" id="dateTo" data-bind="value: dateTo">
                                </div>
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12">
                                <label class="col-12 col-form-label" style="color:transparent">l</label>
                                <div class="col-xl-12 col-sm-12 col-md-10">
                                        <input type="button" class="btn btn-primary col " data-bind="click:LoadData" value="Refresh">
                                </div>
                            </div>
                        </div>

                        <hr class="my-4">
                        <div class="col-12 p-3 ">
                            <table id="tbl_Post_Data" class="table  table-bordered">
                                <thead>
                                    <tr>
                                        <th> <input type="checkbox" data-bind="checked: SelectAll" id="chk" /></th>
                                            
                                        <th>Application No</th>
                                        <th>Shholder No</th>
                                        <th>Name</th>
                                        <th>Entried By</th>
                                        <th>Action</th>
                                            

                                    </tr>
                                </thead>
                                <tbody data-bind="foreach:ApplicationList">
                                    <tr>
                                        <td><input type="checkbox" data-bind="checked: Selected" class="case" name="case[]" /></td>
                                        <td data-bind="text: ApplicationNo"></td>
                                        <td data-bind="text: ShHolderNo"></td>
                                        <td data-bind="text: Name" ></td>
                                        <td data-bind="text: UserName" ></td>
                                        <td data-bind="text: Action"></td>
                                            
                                    </tr>
                                </tbody>
                            </table>
                        </div>

                        <hr class="my-4 ">
                        <div class="row col-12 ">
                            <div class="col-xl-3  col-md-6 col-sm-6 col-6 ">
                                <input type="text" class="form-control form-control-sm mr-2 mt-1 " placeholder="Posting Remarks" data-bind="value:PostingRemarks" maxlength="100" />
                            </div>
                            <div class="form-group row col-xl-3 col-md-6 col-sm-12 col-12 " id="simple-date1">

                                <div class="input-group date col-sm-12 col-md-10 mt-1">
                                    <div class="input-group-prepend">

                                    </div>
                                    <input type="text" class="form-control form-control-sm" disabled="disabled" data-bind="value: PostingDate , text:PostingDate" id="postingDate">
                                </div>
                            </div>
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-success  col-12" data-bind="click:PostShholderInfo.bind($data,'A')" value="Authorization">
                            </div>
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-warning  col-12" data-bind="click:PostShholderInfo.bind($data,'R')" value="Rejection">
                            </div>
                            <div class="col-xl-2 col-md-2 col-sm-4 col-4 ">
                                <input type="button" class="btn btn-danger col-12" id="btnDelete" data-bind="click:PostShholderInfo.bind($data,'D')" value="Delete">
                            </div>
                        </div>

                    </form>

                </div>
            </div>
        </div>

    </div>

</div>
@section Footer{
<script src="~/vendor/sweetalert/sweet-alert.js"></script>
<script src="~/scripts/HolderManagement/EntryUpdateApplicationPosting.js"></script>
}
